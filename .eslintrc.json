{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "plugin:vue/vue3-recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "semi": [2, "never"],
      "no-unused-expressions": "off",
      "no-plusplus": "off",
      "vue/no-multiple-template-root": "off"
    }
}
